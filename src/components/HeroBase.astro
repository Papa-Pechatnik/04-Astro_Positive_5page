---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  subtitle: string;
  imgSrc: ImageMetadata;
}

const { title, subtitle, imgSrc } = Astro.props;
---

<section class="hero">
  <div class="container">
    <div class="hero-wrap">
      <div class="hero-content">
        <h1 class="hero-title h1-title">{title}</h1>
        <p class="hero-subtitle h1-subtitle">{subtitle}</p>
        <div class="hero-image">
          <Image class="hero-image__img" src={imgSrc} alt="hero-image" />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-wrap {
    border-radius: 2.25rem;
    padding: var(--padding60-30);
    background-color: var(--bg-tertiary);
  }
  .hero-content {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: auto 1fr;
    justify-content: space-between;
    gap: var(--gap-32);
  }

  .hero-title {
    grid-area: 1 / 2 / 2 / 3;
  }
  .hero-subtitle {
    grid-area: 2 / 2 / 3 / 3;
  }

  .hero-image {
    grid-area: 1 / 1 / 3 / 2;
    max-width: 32.875rem;
    width: 100%;
    height: 100%;
    aspect-ratio: 525/485;
    display: flex;
    align-items: center;
    justify-content: center;
    
  }

  .hero-image__img {
    width: 100%;
    height: 100%;
  }

  .hero-title,
  .hero-subtitle {
    max-width: 32.125rem;
    width: 100%;
  }

  @media screen and (max-width: 767px) {
    .hero-content {
      grid-template-columns: 1fr;
      grid-template-rows: auto;

      border-radius: 0;
      background-color: transparent;
    }
    .hero-title {
      grid-area: 1 / 1 / 2 / 2;
    }
    .hero-subtitle {
      grid-area: 3 / 1 / 4 / 2;
    }
    .hero-image {
      justify-self: center;
      grid-area: 2 / 1 / 3 / 2;
    }
  }
</style>
