---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  subtitle: string;
  imgSrc: ImageMetadata;
}

const { title, subtitle, imgSrc } = Astro.props;
---

<section class="hero">
  <div class="container">
    <div class="hero-wrap">
      <h1 class="hero-title h1-title">{title}</h1>
      <p class="hero-subtitle h1-subtitle">{subtitle}</p>
      <Image class="hero-image" src={imgSrc} width={504} height={445} alt="hero-image" />
    </div>
  </div>
</section>

<style>
  .hero-wrap {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: auto 1fr;
    justify-content: space-between;
    gap: 32px;
    border-radius: 36px;
    padding: 60px;
    background-color: var(--bg-tertiary);
  }

  .hero-image {
    max-width: 504px;
    width: 100%;
    aspect-ratio: 504/445;
    height: 100%;
    padding-inline: 20px;
  }
  .hero-title {
    grid-area: 1 / 2 / 2 / 3;
  }
  .hero-subtitle {
    grid-area: 2 / 2 / 3 / 3;
  }
  .hero-image {
    grid-area: 1 / 1 / 3 / 2;
  }

  @media screen and (max-width: 767px) {
    .hero-wrap {
      grid-template-columns: 1fr;
      grid-template-rows: auto;

      border-radius:0;
      padding: 0;
      background-color: transparent;
    }
    .hero-title {
      grid-area: 1 / 1 / 2 / 2;
    }
    .hero-subtitle {
      grid-area: 3 / 1 / 4 / 2;
    }
    .hero-image {
    justify-self: center;
      grid-area: 2 / 1 / 3 / 2;
    }
  }
</style>
